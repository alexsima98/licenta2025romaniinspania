<h2><%= @job.title %></h2>

<p><strong>Categorie:</strong> <%= @job.category %></p>
<p><strong>Salariu:</strong> €<%= @job.salary %></p>
<p><strong>Descriere:</strong></p>
<p><%= simple_format(@job.description) %></p>

<% if @job.images.attached? %>
  <div class="row mt-4">
    <h5>Imagini:</h5>
    <% @job.images.each do |image| %>
      <div class="col-md-4 mb-3">
        <%= image_tag image.variant(resize_to_limit: [600, 400]), class: "img-fluid rounded shadow-sm" %>
      </div>
    <% end %>
  </div>
<% end %>

<hr class="my-4" />

<div class="d-flex justify-content-between">
  <%= link_to "Înapoi la listă", jobs_path, class: "btn btn-outline-secondary" %>

  <div>
    <%= link_to "Editează", edit_job_path(@job), class: "btn btn-primary me-2" %>
    <%= link_to "Șterge", job_path(@job), method: :delete, data: { confirm: "Sigur vrei să ștergi acest job?" }, class: "btn btn-danger" %>
  </div>
</div>
